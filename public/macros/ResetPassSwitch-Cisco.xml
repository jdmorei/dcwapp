<Macro>
  <name>ResetPassSwitch-Cisco</name>
  <device>
    <manufacturer>Cisco</manufacturer>
    <serie>-</serie>
    <model>-</model>
  </device>
  <inputs>
  </inputs>
  <commands>
    <command>flash_init</command>
    <command>sleep(12)</command>
    <command>dir flash:</command>
    <command>CR()</command>
    <command>rename flash:config.text flash:config.old+random(100)</command>
    <command>boot</command>
    <command>sleep(120)</command>
    <command>CR()</command>
    <command>no</command>
    <command>CR()</command>
    <command>enable</command>
    <command>rename flash:config.old+random(100) flash:config.text</command>
    <command>copy flash:config.text system:running-config</command>
    <command>CR()</command>
    <command>configure terminal</command>
    <command>enable secret dracsc</command>
    <command>exit</command>
    <command>write memory</command>
  </commands>
</Macro>

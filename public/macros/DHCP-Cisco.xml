<Macro>
  <name>DHCP-Cisco</name>
  <device>
    <manufacturer>Cisco</manufacturer>
    <serie>-</serie>
    <model>-</model>
  </device>
  <inputs>
    <input>&lt;ip1&gt;</input>
    <input>&lt;ip2&gt;</input>
    <input>&lt;nombre&gt;</input>
    <input>&lt;red&gt;</input>
    <input>&lt;mascara&gt;</input>
    <input>&lt;iprouter&gt;</input>
  </inputs>
  <commands>
    <command>service dhcp</command>
    <command>ip dhcp excluded-address &lt;ip1&gt; &lt;ip2&gt;</command>
    <command>ip dhcp pool &lt;nombre&gt;</command>
    <command>network &lt;red&gt; &lt;mascara&gt;</command>
    <command>default-router &lt;iprouter&gt;</command>
    <command>lease 10</command>
  </commands>
</Macro>

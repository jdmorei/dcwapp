<Macro>
  <name>Import MikrotikDemo</name>
  <device>
    <manufacturer>Mikrotik</manufacturer>
    <serie>hAp</serie>
    <model></model>
  </device>
  <inputs>
    <input>&lt;nombreBridge&gt;</input>
    <input>&lt;ssid&gt;</input>
  </inputs>
  <commands>
    <command>/interface bridge port remove 1 </command>
    <command>/system identity set  name=demoproyecto</command>
    <command>/interface bridge add name=&lt;nombreBridge&gt;</command>
    <command>/interface bridge port add interface=wlan1 bridge=&lt;nombreBridge&gt;</command>
    <command>/ip dhcp-server network add address=10.50.0.0/24 gateway=10.50.0.1 dns-server=8.8.8.8 netmask=255.255.255.0</command>
    <command>/ip pool add name=demo ranges=10.50.0.100-10.50.0.200</command>
    <command>/ip address add interface=&lt;nombreBridge&gt; address=10.50.0.1/24</command>
    <command>/ip dhcp-server add interface=&lt;nombreBridge&gt; name=demo  disabled=no  address-pool=demo</command>
    <command>/interface wireless set numbers=wlan1 ssid=&lt;ssid&gt;</command>
    <command>/ip hotspot add interface=demo disabled=no address-pool=demo </command>
    <command>/password old-password="" new-password=passwordssh() confirm-new-password=passwordssh()</command>
  </commands>
</Macro>

<% if logged_in? %>


          <div class="row">
            <div class="col-md-12">
              <!--    Striped Rows Table  -->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h1><%= t('details_config')%> <%= @interface.name %> </h1>
                </div>
                <div class="panel-body">

                  <p>
                    <strong><%= t('name')%>:</strong>
                    <%= @interface.name %>
                  </p>

                  <p>
                    <strong><%= t('address')%>:</strong>
                    <%= @interface.address %>
                  </p>

                  <p>
                    <strong><%= t('mask')%>:</strong>
                    <%= @interface.mask %>
                  </p>

                  <p>
                    <strong><%= t('gateway')%>:</strong>
                    <%= @interface.gateway %>
                  </p>

                  <p>
                    <strong><%= t('dns')%>:</strong>
                    <%= @interface.dns %>
                  </p>

                </div>
              </div>
              <div>
                <%= link_to t('Back'), interfaces_path, class: "btn btn-default btn-lg", style: "text-color: white" %>
                <%= link_to t('edit'), edit_interface_path(@interface), class: "btn btn-danger btn-lg" %>
              </div>
            </div>


          </div>

    <!--  End  Striped -->
<% end %>

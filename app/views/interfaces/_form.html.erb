<%= form_for(@interface) do |f| %>
  <% if @interface.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@interface.errors.count, "error") %><%= t('error_save_config')%></h2>

      <ul>
      <% @interface.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('name') %><br>
    <%= f.text_field :name , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('address') %><br>
    <%= f.text_field :address , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label t('mask') %><br>
    <%= f.text_field :mask, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('gateway') %><br>
    <%= f.text_field :gateway, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t('dns') %><br>
    <%= f.text_field :dns, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('save'), class: "btn btn-danger btn-lg" %>
  </div>
<% end %>

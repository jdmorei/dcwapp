<% if logged_in? %>


          <!--    Striped Rows Table  -->
          <div class="panel panel-default">
            <div class="panel-heading">
              <h1><%= t('log_files') %></h1>
            </div>
            <div class="panel-body">
              <div class="table-responsive">

                <table   id="dtabla"  class="table table-striped">
                  <thead>
                  <tr>
                    <th><%= t('date') %></th>
                    <th><%= t('file') %></th>
                    <th><%= t('sizekb') %></th>

                    <th></th>
                  </tr>
                  </thead>
                  <tbody>



                  <% @logs.each do |l| %>
                      <tr>
                    <td><%= l.date %></td>
                    <td><%= l.name %></td>
                    <td><%= l.size %></td>
                    <td class="dropdown">

                      <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <%= t('actions')%>
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><%= link_to t('read'), logs_readLog_path(:l => l.name),target: '_blank' %></li>
                        <li><%= link_to t('download'), logs_downloadLog_path(:l => l.name) %></li>
                      </ul>

                    </td>
                      </tr>
                  <% end %>


                  </tbody>
                </table>

                <br>

              </div>
            </div>
          </div>
        </div>


    <!--  End  Striped -->


<% end %>